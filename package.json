{
  "private": true,
  "name": "mike-cousins-dot-io",
  "version": "2.0.0",
  "author": "Michael Cousins <mike@cousins.io> (https://mike.cousins.io)",
  "description": "Michael Cousins' home on the internet.",
  "homepage": "https://mike.cousins.io",
  "repository": "github:mcous/mcous.github.io",
  "bugs": "https://github.com/mcous/mcous.github.io/issues",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "all": "concurrently -g pnpm:types pnpm:format:check pnpm:lint pnpm:build",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "types": "tsc",
    "lint": "eslint \"**/*.@(ts|tsx)\"",
    "format": "pnpm format:base --write",
    "format:check": "pnpm format:base --check",
    "format:base": "prettier \"**/*.@(ts|tsx|svg|json|yaml|md)\""
  },
  "dependencies": {
    "@fontsource/open-sans": "^4.5.2",
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/free-brands-svg-icons": "^6.1.2",
    "@fortawesome/free-regular-svg-icons": "^6.1.2",
    "preact": "^10.6.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@preact/preset-vite": "^2.1.6",
    "@prettier/plugin-xml": "^2.2.0",
    "@types/node": "^18.7.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "preact-render-to-string": "^5.1.19",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "vite": "^3.0.7",
    "vite-plugin-ssr": "^0.4.20",
    "vite-plugin-windicss": "^1.6.1",
    "windicss": "^3.4.1"
  },
  "eslintConfig": {
    "extends": [
      "standard-with-typescript",
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "@prettier/plugin-xml"
    ]
  }
}
