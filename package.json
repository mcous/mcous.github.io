{
  "name": "@mcous/dot-io",
  "version": "2.1.0",
  "private": true,
  "description": "Michael Cousinsâ€™ home on the internet.",
  "homepage": "https://michael.cousins.io",
  "bugs": "https://github.com/mcous/mcous.github.io/issues",
  "repository": "github:mcous/mcous.github.io",
  "license": "MIT",
  "author": "Michael Cousins <michael@cousins.io> (https://michael.cousins.io)",
  "type": "module",
  "scripts": {
    "all": "astro sync && pnpm run lint && pnpm run check && pnpm run coverage && pnpm run build",
    "build": "astro build",
    "check": "astro check",
    "coverage": "vitest run --coverage",
    "format": "prettier --write . && eslint --fix .",
    "lint": "prettier --check . && eslint .",
    "prepare": "playwright install chromium",
    "preview": "astro build && astro preview",
    "start": "astro dev",
    "test": "vitest"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "@mcous/eslint-config",
      "@unocss",
      "plugin:astro/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/restrict-template-expressions": [
        "error",
        {
          "allowAny": false,
          "allowBoolean": true,
          "allowNullish": false,
          "allowNumber": true,
          "allowRegExp": false,
          "allowNever": false
        }
      ],
      "promise/always-return": "off",
      "promise/no-callback-in-promise": "off",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "overrides": [
      {
        "files": [
          "src/env.d.ts"
        ],
        "rules": {
          "@typescript-eslint/triple-slash-reference": "off",
          "unicorn/prevent-abbreviations": "off"
        }
      },
      {
        "files": [
          "**/__tests__/**"
        ],
        "extends": [
          "plugin:testing-library/react",
          "plugin:jest-dom/recommended"
        ]
      }
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.8.3",
    "@astrojs/mdx": "^3.1.3",
    "@astrojs/preact": "^3.5.1",
    "@astrojs/sitemap": "^3.1.6",
    "@fontsource-variable/open-sans": "^5.0.29",
    "@fontsource-variable/source-code-pro": "^5.0.19",
    "@iconify-json/octicon": "^1.1.56",
    "@unocss/reset": "^0.61.6",
    "astro": "^4.12.2",
    "clsx": "^2.1.1",
    "preact": "^10.23.1",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.9.0",
    "@babel/core": "^7.24.9",
    "@iconify-json/fa6-brands": "^1.1.21",
    "@iconify-json/fa6-regular": "^1.1.21",
    "@mcous/eslint-config": "^0.4.4",
    "@mcous/prettier-config": "^0.3.0",
    "@mcous/typescript-config": "^0.2.1",
    "@preact/preset-vite": "^2.9.0",
    "@prettier/plugin-xml": "^3.4.1",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@unocss/eslint-config": "^0.61.6",
    "@unocss/preset-icons": "^0.61.6",
    "@vitest/coverage-istanbul": "^2.0.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unicorn": "^51.0.1",
    "eslint-plugin-vitest": "^0.3.26",
    "jsdom": "^24.1.1",
    "playwright": "^1.45.3",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "remark-emoji": "^5.0.1",
    "typescript": "^5.3.3",
    "unocss": "^0.61.6",
    "vite": "^5.3.5",
    "vitest": "^2.0.4"
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
