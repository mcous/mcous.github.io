{
  "name": "@mcous/dot-io",
  "version": "2.1.0",
  "private": true,
  "description": "Michael Cousins' home on the internet.",
  "homepage": "https://michael.cousins.io",
  "bugs": "https://github.com/mcous/mcous.github.io/issues",
  "repository": "github:mcous/mcous.github.io",
  "license": "MIT",
  "author": "Michael Cousins <michael@cousins.io> (https://michael.cousins.io)",
  "type": "module",
  "scripts": {
    "all": "astro sync && concurrently -g pnpm:lint pnpm:check pnpm:coverage pnpm:build",
    "build": "astro build",
    "check": "astro check",
    "coverage": "vitest run --coverage",
    "format": "prettier --write . && eslint --fix .",
    "lint": "prettier --check . && eslint .",
    "preview": "astro build && astro preview",
    "start": "astro dev",
    "test": "vitest"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@mcous/eslint-config",
      "@unocss",
      "plugin:astro/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "overrides": [
      {
        "files": [
          "src/env.d.ts"
        ],
        "rules": {
          "@typescript-eslint/triple-slash-reference": "off",
          "unicorn/prevent-abbreviations": "off"
        }
      },
      {
        "files": [
          "**/__tests__/**"
        ],
        "extends": [
          "plugin:testing-library/react",
          "plugin:jest-dom/recommended"
        ]
      }
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.5.5",
    "@astrojs/mdx": "^2.1.1",
    "@astrojs/preact": "^3.1.1",
    "@astrojs/sitemap": "^3.1.1",
    "@fontsource-variable/open-sans": "^5.0.25",
    "@fontsource-variable/source-code-pro": "^5.0.17",
    "@unocss/reset": "^0.58.5",
    "astro": "^4.4.4",
    "preact": "^10.19.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.5.3",
    "@babel/core": "^7.23.9",
    "@iconify-json/fa6-brands": "^1.1.18",
    "@iconify-json/fa6-regular": "^1.1.18",
    "@mcous/eslint-config": "^0.4.4",
    "@mcous/prettier-config": "^0.3.0",
    "@mcous/typescript-config": "^0.2.1",
    "@preact/preset-vite": "^2.8.1",
    "@prettier/plugin-xml": "^3.3.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/preact": "^3.2.3",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@unocss/eslint-config": "^0.58.5",
    "@unocss/preset-icons": "^0.58.5",
    "@vitest/coverage-istanbul": "^1.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "eslint-plugin-vitest": "^0.3.22",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "remark-emoji": "^4.0.1",
    "typescript": "^5.3.3",
    "unocss": "^0.58.5",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "packageManager": "pnpm@8.15.4+sha256.cea6d0bdf2de3a0549582da3983c70c92ffc577ff4410cbf190817ddc35137c2"
}
