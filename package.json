{
  "name": "@mcous/dot-io",
  "version": "2.0.0",
  "private": true,
  "description": "Michael Cousins' home on the internet.",
  "homepage": "https://michael.cousins.io",
  "bugs": "https://github.com/mcous/mcous.github.io/issues",
  "repository": "github:mcous/mcous.github.io",
  "license": "MIT",
  "author": "Michael Cousins <michael@cousins.io> (https://michael.cousins.io)",
  "type": "module",
  "scripts": {
    "_eslint": "eslint \"**/*.{ts,tsx,js}\"",
    "_prettier": "prettier \"**/*.{ts,tsx,js,json,yaml,md,mdx}\"",
    "all": "concurrently -g pnpm:check:* pnpm:coverage pnpm:build",
    "build": "vite build",
    "check": "concurrently -g pnpm:check:*",
    "check:format": "pnpm _prettier --check",
    "check:lint": "pnpm _eslint",
    "check:types": "tsc",
    "coverage": "vitest run --coverage",
    "format": "pnpm _eslint --fix && pnpm _prettier --write",
    "preview": "vite build && vite preview",
    "start": "vite dev",
    "test": "vitest"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@mcous/eslint-config",
      "@unocss"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**"
        ],
        "extends": [
          "plugin:testing-library/react",
          "plugin:jest-dom/recommended"
        ]
      }
    ]
  },
  "dependencies": {
    "@fontsource-variable/open-sans": "^5.0.16",
    "@fontsource-variable/source-code-pro": "^5.0.14",
    "@preact/signals": "^1.2.1",
    "@unocss/reset": "^0.56.5",
    "highlight.js": "^11.9.0",
    "preact": "^10.18.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@iconify-json/fa6-brands": "^1.1.13",
    "@iconify-json/fa6-regular": "^1.1.13",
    "@mcous/eslint-config": "0.4.0",
    "@mcous/prettier-config": "0.3.0",
    "@mcous/typescript-config": "0.2.1",
    "@mdx-js/preact": "^2.3.0",
    "@mdx-js/rollup": "^2.3.0",
    "@preact/preset-vite": "^2.6.0",
    "@prettier/plugin-xml": "^3.2.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/preact": "^3.2.3",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "@unocss/eslint-config": "^0.56.5",
    "@vitest/coverage-istanbul": "^0.34.6",
    "concurrently": "^8.2.1",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-sonarjs": "0.21.0",
    "eslint-plugin-testing-library": "^6.1.0",
    "eslint-plugin-unicorn": "48.0.1",
    "eslint-plugin-vitest": "0.3.2",
    "jsdom": "^22.1.0",
    "preact-render-to-string": "^6.2.2",
    "prettier": "3.0.3",
    "rehype-highlight": "^6.0.0",
    "rehype-slug": "^5.1.0",
    "remark-emoji": "^3.1.2",
    "remark-gfm": "^3.0.1",
    "rollup": "^3.29.4",
    "typescript": "5.2.2",
    "unocss": "^0.56.5",
    "vike": "^0.4.143",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  },
  "packageManager": "pnpm@8.9.1+sha256.0bbdbc6f227fc4e5308b79236483b092a755799c42932e85fb8916a30c75a47c"
}
