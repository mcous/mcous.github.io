{
  "extends": ["astro/tsconfigs/strict", "@mcous/typescript-config/base.json"],
  "compilerOptions": {
    "plugins": [{ "name": "@astrojs/ts-plugin" }],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "$components/*": ["src/components/*"],
      "$images/*": ["src/images/*"],
      "$layouts/*": ["src/layouts/*"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "exclude": ["dist", "coverage"]
}
